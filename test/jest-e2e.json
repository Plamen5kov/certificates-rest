{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "globalSetup": "./setup.ts",
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@App/(.*)$": "<rootDir>/../src/$1",
    "^src/(.*)$": "<rootDir>/../src/$1"
  }
}